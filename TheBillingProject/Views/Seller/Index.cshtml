@model IEnumerable<TheBillingProject.Models.Seller>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Seller</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Seller</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title m-b-0">Seller</h5>
        </div>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model._id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.comission_percent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.status)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item._id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.comission_percent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.status)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { _id = item._id, name = item.name, comission_percent = item.comission_percent, status = item.status })|
                        @Html.ActionLink("Details", "Details", new { _id = item._id, name = item.name, comission_percent = item.comission_percent, status = item.status })|
                        @Html.ActionLink("Delete", "Delete", new { _id = item._id, name = item.name, comission_percent = item.comission_percent, status = item.status })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
