@model TheBillingProject.Models.AccountingMove

@{
    ViewBag.Title = "Details";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Accounting Movement</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Accounting Movement</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">

    <h3>Details</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
        

            <dt>
                @Html.DisplayNameFor(model => model.description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.status)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.aux)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.aux)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.date)
            </dd>

        </dl>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Account")
                </th>
                <th>
                    @Html.DisplayName("Customer")
                </th>
                <th>
                    @Html.DisplayName("Seller")
                </th>
                <th>
                    @Html.DisplayName("Move Type")
                </th>
                <th>
                    @Html.DisplayName("Total")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.details)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.account)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.seller)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.moveType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.total)
                    </td>
                  
                </tr>
            }

        </table>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>